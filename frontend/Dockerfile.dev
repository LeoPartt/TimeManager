FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive

# Install dependencies for Flutter development
RUN apt update && apt install -y \
    curl \
    git \
    unzip \
    xz-utils \
    libglu1-mesa \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Install Flutter SDK
ENV FLUTTER_VERSION=3.35.5
ENV FLUTTER_HOME=/opt/flutter
ENV PATH=$FLUTTER_HOME/bin:$PATH

RUN git clone --depth 1 --branch ${FLUTTER_VERSION} https://github.com/flutter/flutter.git ${FLUTTER_HOME} \
    && flutter precache --web \
    && flutter config --no-analytics \
    && flutter config --enable-web

WORKDIR /app

# Copy pubspec files for dependency caching
COPY time_manager/pubspec.yaml time_manager/pubspec.lock ./
RUN flutter pub get

# Copy the rest of the application
COPY time_manager/ ./

# Expose port for Flutter web dev server
EXPOSE 8080

# Run Flutter web in debug mode with hot reload
CMD ["flutter", "run", "-d", "web-server", "--web-hostname", "0.0.0.0", "--web-port", "8080"]